{
  "compilerOptions": {
    "jsx": "react",
    "module": "ESNext",
    "target": "ES6",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,    
    "declaration": true,
    "declarationDir": "dist",
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "emitDeclarationOnly": false,
    "rootDir": "src"
  },
  "include": ["src"]
}
